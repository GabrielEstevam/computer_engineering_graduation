<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ufsc.gabriel.calculadoralogica.MainActivity"
    android:orientation="vertical"
    style="@style/Base.AlertDialog.AppCompat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProposicao"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginBottom="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:layout_alignTop="@+id/btn_ok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apagar"
                    android:id="@+id/btnApaga"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="danger"
                    android:padding="5dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpar"
                    android:id="@+id/btnLimpar"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="danger"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calcular"
                    android:id="@+id/btnGo"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="danger"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:id="@+id/btnAbre"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="primary"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:id="@+id/btnFecha"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="primary"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="^"
                    android:id="@+id/btnConj"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="success"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="v"
                    android:id="@+id/btnDisj"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="success"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:id="@+id/btnNeg"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="success"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="->"
                    android:id="@+id/btnImp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="success"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&lt;->"
                    android:id="@+id/btnBiimp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="success"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="p"
                    android:id="@+id/btn_p"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="q"
                    android:id="@+id/btn_q"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="r"
                    android:id="@+id/btn_r"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:id="@+id/btn_s"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="t"
                    android:id="@+id/btn_t"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="u"
                    android:id="@+id/btn_u"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_type="warning"
                    android:padding="5dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
